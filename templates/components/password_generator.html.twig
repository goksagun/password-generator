<div{{ attributes }} class="w-full">
    <div class="mb-6">
        <input type="text" name="phrase" id="phrase" placeholder="I go bowling every Friday night with 8 friends" class="block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 text-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" autocomplete="off"
               data-model="norender|phrase">
    </div>

    <div class="mb-6">
        <p class="text-lg justify-center font-medium">{{ this.password }}</p>
    </div>

    <button type="button" class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900"
            data-action="live#$render">
        Generate
